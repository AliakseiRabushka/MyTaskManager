<div class="flex-col">
  <h1 class="text-3xl mb-2 font-bold"><%= @user.nickname %></h1>
  <p><%= @user.name %></p>
  <p><%= @user.email %></p>
</div>
<ul>
  <li class="hover:underline"><%= link_to "Edit", edit_user_path(@user) %></li>
  <li class="hover:underline"><%= link_to "Destroy", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

