<%= form_with model: board do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% board.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-5">
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% board.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="flex w-28 p-1 border-2 mx-auto border-black rounded-md hover:bg-blue">
    <%= form.submit %>
  </div>
<% end %>


