<h1><%= @board.title %></h1>

<p><%= @board.body %></p>

<ul>
  <li><%= link_to "Edit", edit_board_path(@board) %></li>
  <li><%= link_to "Destroy", board_path(@board), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Tasks</h2>
<%= render @board.tasks %>

<h2>Add a task:</h2>
<%= render 'tasks/form' %>


